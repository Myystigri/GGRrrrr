{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vote list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Challengeid</th>
                <th>Userid</th>
                <th>Vote</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vote in votes %}
            <tr>
                <td><a href="{{ path('vote_show', { 'id': vote.id }) }}">{{ vote.id }}</a></td>
                <td>{{ vote.challengeId }}</td>
                <td>{{ vote.userId }}</td>
                <td>{{ vote.vote }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vote_show', { 'id': vote.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vote_edit', { 'id': vote.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vote_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
