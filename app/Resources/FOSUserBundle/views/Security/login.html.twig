{% extends 'base.html.twig' %}

{% block body %}
	{% trans_default_domain 'FOSUserBundle' %}

	{% block fos_user_content %}
	{% if error %}
	    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path("fos_user_security_check") }}" method="post">
	    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="row">
        <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
            </br></br><h2>Se connecter </h2>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
            <label for="username">Username</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Nom"/>
            </div>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
            <label for="password">Mot de passe</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="Mot de passe">
            </div>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
            <div class="input-group">
                <span class="input-group-addon">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                </span>
                <label class="remember-me form-group" for="remember_me">Se rappeler de moi</label>
            </div>

        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-lg-offset-2 col-md-offset-2 col-lg-8 col-md-8">
            <input class="login btn btn-lg" type="submit" id="_submit" name="_submit" value="Se connecter" />
        </div>
    </div>
	</form>
	{% endblock fos_user_content %}
	{% if error %}
    <div class="alert-mess row">
        <div class="alert alert-danger col-lg-offset-4 col-md-offset-4 col-lg-4 col-md-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    </div>
{% endif %}
<div class="row wrapp-login">
    
</form>
</div>


{% endblock %}